#########
# Basic #
#########
# Reload sxhkd
super + alt + r
      pkill -USR1 -x sxhkd && dunstify -r 500 "SXHKD" "Config Reloaded"

super + Return
      $TERMINAL

super + r
      $TERMINAL -e lf

super + m
	$TERMINAL -e ncmpcpp

super + n
	$TERMINAL -e newsboat

super + i
	$TERMINAL -e htop

super + y
	$TERMINAL -e calcurse

super + shift + a
	$TERMINAL -e pulsemixer

super + w
	$BROWSER

super + shift + w
	$TERMINAL -e sudo -A nmtui

# Et cetera...
super + grave
	dmenuunicode

super + Scroll_Lock
	killall screenkey || screenkey

super + Insert
	showclip

super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"

super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A shutdown -r now"

super + l
	mpc pause; pauseallmpv; /usr/local/bin/lock; xset dpms force off

XF86Launch1
	xset dpms force off

# Pause audio
super + p
	lmc {toggle}

# Changes to next/previous tracks
super + {comma,period}
	lmc {prev,next}

# Restart track
super + shift + less
	lmc replay

# Increase volume
super + {equal,plus}
	lmc up {5,15}

# Decrease volume
super {_,shift +} + minus
	lmc down {5,15}

# Seek foward in song
super + {_,shift +} bracketright
	lmc forward {10,120}

# Seek backward in song
super + {_,shift +} bracketleft
	lmc back {10,120}

# Function keys
# Change display
XF86Display
	displayselect
# Hibernate
super + F4
	prompt 'Hibernate computer?' 'sudo systemctl suspend'
# Restart/rescan wifi/eth networks
XF86WLAN
	sudo -A systemctl restart NetworkManager
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Search with Duckduckgo
super + F11
	ducksearch
# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui

# Launch application launcher
super + space
    rofi -show run

# Launch window switcher
alt + Tab
    rofi -show window

# Launch clipboard viewer
super + BackSpace
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# # Launch password manager
# super + p
#     menu=$(echo -e "$HOME/.password-store\n$ALTPASSDIR" | rofi -dmenu); rofi-pass --root "${menu}"

# Bookmark via pinboard
super + d
    alacritty --title pinit -e ~/bin/pinit

# #########
# # Media #
# #########

# Toggle mute
XF86AudioMute
   pulseaudio-ctl mute

# Toggle mic mute
XF86AudioMicMute
    pulseaudio-ctl mute-input

# Change volume
XF86Audio{Raise,Lower}Volume
    pulseaudio-ctl {up,down} 10

# # Change volume
super + {k,j}
    pulseaudio-ctl {up,down} 2

super + shift + {k,j}
      pulseaudio-ctl {up,down} 10

