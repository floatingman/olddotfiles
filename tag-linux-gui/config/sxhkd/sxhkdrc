# # Lock the screen
# control + alt + l
#     betterlockscreen -l

# # Lock the screen
XF86ScreenSaver
    /usr/local/bin/lock

# # Toggle trackpad
XF86Tools
    toggle-touchpad.sh

# XF86Launch1
#     toggle-touchpad.sh

# Change screen brightness
XF86MonBrightness{Up,Down}
     light -{A,U} 5

# Take a screenshot
Print
 	flameshot full -p ~/Photos/screenshots
super + Print
 	flameshot gui
super + shift + s
     teiler

# # Generate a QR code from the clipboard
super + q
    qcode

# Suspend (F12)
super + XF86Favorites
	systemctl suspend

# Dunst
ctrl + grave
	dunstctl history

ctrl + shift + period
	dunstctl context

# #########
# # Mouse #
# #########
button9
 	xte 'key Page_Up'

button8
 	xte 'key Page_Down'
