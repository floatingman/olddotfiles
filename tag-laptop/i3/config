#MEDIAKEYS
bindsym XF86TouchpadToggle exec $binpath/toggle-touchpad.sh
bindsym XF86AudioPlay exec mpc toggle
#bindcode 121 exec "amixer --quiet set Master toggle"
#bindcode 122 exec "amixer --quiet set Master 3%-"
#bindcode 123 exec "amixer --quiet set Master 3%+"
bindsym XF86AudioRaiseVolume exec amixer sset Master 2%+ && killall -USR1 i3blocks
bindsym XF86AudioLowerVolume exec amixer sset Master 2%- && killall -USR1 i3blocks
bindsym XF86AudioMute exec amixer sset Master toggle && killall -USR1 i3blocks


# intellegent locker

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id $binpath/i3exit lock, mode "default"
	bindsym e exec --no-startup-id $binpath/i3exit logout, mode "default"
	bindsym s exec --no-startup-id $binpath/i3exit suspend, mode "default"
	bindsym h exec --no-startup-id $binpath/i3exit hibernate, mode "default"
	bindsym r exec --no-startup-id $binpath/i3exit reboot, mode "default"
	bindsym Shift+s exec --no-startup-id $binpath/i3exit shutdown, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"


