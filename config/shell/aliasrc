alias ref="shortcuts >/dev/null; source ${XDG_CONFIG_HOME:-$HOME/.config}/shortcutrc ; source ${XDG_CONFIG_HOME:-$HOME/.config}/zshnameddirrc"


iowaiting() {
    watch -n 1 "(ps aux | awk '\$8 ~ /D/  { print \$0 }')"
}

def() {
    dict $1 | less
}

jul () {
    date -d "$1-01-01 +$2 days -1 day" "+%Y-%m-%d";
}
