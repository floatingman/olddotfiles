#########
# Media #
#########

# Toggle mute
XF86AudioMute
   pulseaudio-ctl mute

# Toggle mic mute
XF86AudioMicMute
    pulseaudio-ctl mute-input

# Change volume
XF86Audio{Raise,Lower}Volume
    pulseaudio-ctl {up,down} 2

# Change volume
super + {k,j}
    pulseaudio-ctl {up,down} 2

super + shift + {k,j}
		pulseaudio-ctl {up,down} 10

# Toggle mpd
super + 0
    mpc -q toggle

# Navigate mpd playlist
super + {comma, period}
    mpc -q {prev, next}

# Display current mpd track
super + slash
    notify-send -u low "$(mpc -f "%artist%" current)" "$(mpc -f "%title%" current)"

# Play the video URL in the clipboard
super + m
    play

# Mute individual pulse streams
super + shift + m
		pamute
################
# Applications #
################

# Launch terminal
super + t
		$TERMINAL

# Launch web browser
super + w
    firefox -P Accounts

# Launch web browser with work profile
super + shift + w
    firefox -P Work

# Launch application launcher
super + space
    rofi -show run

# Launch window switcher
alt + Tab
    rofi -show window

# Launch password manager
super + p
    menu=$(echo -e "$HOME/.password-store\n$ALTPASSDIR" | rofi -dmenu); rofi-pass --root "${menu}"


########
# Misc #
########

# Lock the screen
control + alt + l
    /usr/local/bin/lock

# Lock the screen
XF86ScreenSaver
    /usr/local/bin/lock

# Toggle trackpad
XF86TouchpadToggle
    trackpad-toggle.sh


# Change screen brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# Take a screenshot
Print
    scrot 'screenshot_%Y-%m-%d-%H%M%S.png' -e 'mv $f ~/tmp'

# Generate a QR code from the clipboard
super + q
    qcode
