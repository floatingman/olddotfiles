!URxvt.italicFont: xft:Consolas:style=Italic:pixelsize=FONT_SIZE:antialias=true:hinting=full,\
                !xft:Noto Color Emoji,\
                !xft:Symbola:pixelsize=FONT_SIZE:antialias=true:hinting=full
!URxvt.boldItalicFont: xft:Consolas:style=Bold Italic:pixelsize=FONT_SIZE:antialias=true:hinting=full,\
                !xft:Noto Color Emoji,\
                !xft:Symbola:pixelsize=FONT_SIZE:antialias=true:hinting=full
!URxvt.font: xft:Noto Sans:size=FONT_SIZE
URxvt.font: xft:Fira Code:style=Retina:pixelsize=FONT_SIZE:antialias=true:hinting=true

